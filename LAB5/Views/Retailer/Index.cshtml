@model IEnumerable<LAB5.Models.Retailer>

@{
    ViewData["Title"] = "Retailers";
}

<h1>Retailers</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Website</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var retailer in Model)
        {
            <tr>
                <td>@retailer.RetailerName</td>
                <td>@retailer.RetailerAddress</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(retailer.RetailerWebSiteUrl))
                    {
                        <a href="@retailer.RetailerWebSiteUrl" target="_blank">Visit Website</a>
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("Details", "Retailer", new { id = retailer.RetailerId })">
                        View Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
