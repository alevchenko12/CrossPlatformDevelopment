@model LAB5.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>@Model.ProductName</h4>
    <dl class="row">
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand?.BrandName</dd>

        <dt class="col-sm-2">Brand Description</dt>
        <dd class="col-sm-10">@Model.Brand?.BrandDescription</dd>

        <dt class="col-sm-2">Product Type</dt>
        <dd class="col-sm-10">@Model.RefProductType?.ProductTypeDescription</dd>

        <dt class="col-sm-2">Other Details</dt>
        <dd class="col-sm-10">@Model.OtherProductDetails</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
